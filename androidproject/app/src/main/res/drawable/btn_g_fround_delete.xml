<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorPrimaryDark_dark"
    >

    <item
        android:id="@android:id/background"
        >
        <shape
            android:shape="rectangle">
            <solid

                android:color="@color/colorPrimaryDark_dark">

            </solid>


            <corners
                android:radius="100000dp"
                />


        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="180"
                android:endColor="@color/colorPrimary_light"
                android:startColor="@color/colorPrimary">

            </gradient>
            <corners
                android:radius="100000dp"
                />
        </shape>

    </item>



</ripple>