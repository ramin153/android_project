<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorPrimary_light"
    >

    <item
        android:id="@android:id/background">
        <shape
            android:shape="rectangle">
            <solid

                android:color="@color/colorPrimary_light">

            </solid>


            <corners
                android:radius="100000dp"
                />


        </shape>
    </item>

    <item >
        <shape
            android:shape="rectangle">
            <gradient

                android:endColor="@color/colorAccent"
                android:startColor="@color/colorPrimaryDark_light">

            </gradient>
            <corners
                android:radius="100000dp"
                />
        </shape>

    </item>



</ripple>