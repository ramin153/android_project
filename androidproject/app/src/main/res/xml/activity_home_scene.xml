<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="400">
       <KeyFrameSet>

       </KeyFrameSet>
        <OnClick
            motion:targetId="@+id/homeActivity_menu"
            motion:clickAction="toggle"
            />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/homeActivity_menuBackGround"
            android:layout_width="150dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/homeActivity_menuBackGround"
            android:layout_width="150dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/homeActivity_gotomap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@id/homeActivity_menu"
            motion:layout_constraintLeft_toLeftOf="@+id/homeActivity_menuBackGround"
            motion:layout_constraintRight_toRightOf="@+id/homeActivity_menuBackGround"
            android:layout_marginStart="16dp" />
        <Constraint
            android:id="@+id/homeActivity_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@id/homeActivity_gotomap"
            motion:layout_constraintLeft_toLeftOf="@+id/homeActivity_gotomap"
            motion:layout_constraintRight_toRightOf="@+id/homeActivity_gotomap"
            android:layout_marginTop="@dimen/mg_md" />
        <Constraint
            android:id="@+id/homeActivity_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintTop_toBottomOf="@id/homeActivity_setting"
            motion:layout_constraintLeft_toLeftOf="@+id/homeActivity_setting"
            motion:layout_constraintRight_toRightOf="@+id/homeActivity_setting"
            android:layout_marginTop="@dimen/mg_md" />
        <Constraint
            motion:layout_constraintLeft_toRightOf="@id/homeActivity_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/homeActivity_menu"
            motion:layout_constraintRight_toRightOf="@id/homeActivity_guideLineRight"
            motion:layout_constraintTop_toTopOf="@id/homeActivity_menu" />
        <Constraint
            motion:layout_constraintLeft_toRightOf="@id/homeActivity_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/homeActivity_menu"
            motion:layout_constraintRight_toRightOf="@id/homeActivity_guideLineRight"
            motion:layout_constraintTop_toTopOf="@id/homeActivity_menu" />
        <Constraint
            motion:layout_constraintLeft_toRightOf="@id/homeActivity_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/homeActivity_menu"
            motion:layout_constraintRight_toRightOf="@id/homeActivity_guideLineRight"
            motion:layout_constraintTop_toTopOf="@id/homeActivity_menu" />
        <Constraint
            android:id="@+id/homeActivity_title"
            motion:layout_constraintLeft_toRightOf="@id/homeActivity_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/homeActivity_menu"
            motion:layout_constraintRight_toRightOf="@id/homeActivity_guideLineRight"
            motion:layout_constraintTop_toTopOf="@id/homeActivity_menu"
             />
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/homeActivity_recyclerview"
            motion:layout_constraintLeft_toLeftOf="@id/homeActivity_barrierLeft"
            motion:layout_constraintRight_toRightOf="@id/homeActivity_guideLineRight"
            android:layout_marginLeft="0dp"
            android:id="@+id/homeActivity_fragmentDayPalce"
            motion:layout_goneMarginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp" />
    </ConstraintSet>
</MotionScene>